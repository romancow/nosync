{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"sourceMap": true,
		"module": "es6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"target": "es5",
		"outDir": "es6"
	},
	"include": ["src/**/*"]
}
